<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GroceryStore</title>
    <environment include="Development">
        <!-- CSS goes here -->
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" type="text/css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <!-- JavaScript goes here -->
        <script src="~/lib/jquery/jquery.js" type="text/javascript"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
        <script src="~/js/site.js" type="text/javascript"></script>
    </environment>
    <environment exclude="Development">
        <!-- CSS goes here -->
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" type="text/css" />
        <link rel="stylesheet" href="~/css/site.min.css" type="text/css" />
        <!-- JavaScript goes here -->
        <script src="~/lib/jquery/jquery.min.js" type="text/javascript"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.min.js" type="text/javascript"></script>
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-md bg-dark navbar-dark">
        <a class="navbar-brand" asp-action="Index" asp-controller="Home">GroceryStore</a>
    </nav>
    <partial name="_CookieConsentPartial" />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <a asp-action="About" asp-controller="Home">About</a> | <a asp-action="Contact" asp-controller="Home">Contact</a> | <a asp-action="Privacy" asp-controller="Home">Privacy</a>
            <p class="float-right">&copy; 2019 - GroceryStore</p>
        </footer>
    </div>
</body>
</html>
